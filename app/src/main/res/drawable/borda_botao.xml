<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado pressionado: fundo laranja e stroke laranja -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FB8C00" />
            <stroke android:width="1dp" android:color="#FB8C00" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Estado selecionado: fundo laranja e stroke laranja -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FB8C00" />
            <stroke android:width="1dp" android:color="#FB8C00" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Estado normal: fundo transparente e stroke laranja -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#FB8C00" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>
