<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FB8C00"> <!-- Laranja translúcido para efeito ripple -->

    <!-- Conteúdo normal do botão (background com borda) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#FB8C00" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Máscara do ripple (cor sólida para efeito) -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#FB8C00" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</ripple>
