        android:src="@drawable/kimono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_jump" />

    <ImageView
        android:id="@+id/icon_bus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/drawable_circle"
        android:backgroundTint="#9FBD84"
        android:scaleType="centerInside"
        android:src="@drawable/shuttle_bus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_kimono" />

    <TextView
        android:id="@+id/paragrafo1"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:text="Ampliar nossas ações sociais, levando o esporte a mais crianças."
        android:textAlignment="inherit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon_heart_puzzle"
        app:layout_constraintTop_toBottomOf="@+id/acoes_sociais" />

    <TextView
        android:id="@+id/paragrafo"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:text="Realizar atividades recreativas para os idosos da Comunidade"
        android:textAlignment="inherit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon_heart_puzzle"
        app:layout_constraintTop_toBottomOf="@+id/atividades" />

    <TextView
        android:id="@+id/paragrafo2"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:text="Adquirir e doar kimonos adequados para as crianças"
        android:textAlignment="inherit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon_heart_puzzle"
        app:layout_constraintTop_toBottomOf="@+id/kimonos" />

    <TextView
        android:id="@+id/paragrafo3"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:text="Garantir transporte para que as crianças participem de eventos"
        android:textAlignment="inherit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon_heart_puzzle"
        app:layout_constraintTop_toBottomOf="@+id/transportes" />

    <ImageView
        android:id="@+id/img_transicao"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paragrafo3"
        app:srcCompat="@drawable/home_foto" />

    <TextView
        android:id="@+id/nossos_propositos"
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Queremos transformar vidas e comunidades"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_transicao" />

    <TextView
        android:id="@+id/paragrafo4"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:text="A nossa missão é promover a inclusão social , através do esporte e atividades em grupo."
        android:textAlignment="inherit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nossos_propositos" />

    <Button
        android:id="@+id/button_doar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#82E547"
        android:text="Doar"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paragrafo4" />

    <TextView
        android:id="@+id/projetos_destaques"
        android:layout_width="215dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Projetos em destaque"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_doar" />

    <ImageButton
        android:id="@+id/imageButton_judo_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projetos_destaques"
        app:srcCompat="@drawable/img1"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButton_boa_idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_judo_page"
        app:srcCompat="@drawable/img12"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButton_artesanato"
        android:layout_width="182dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_boa_idade"
        app:srcCompat="@drawable/img4"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/judo_page"
        android:layout_width="143dp"
        android:layout_height="25dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/oswald_semibold"
        android:text="Judô Infantil"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_judo_page"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projetos_destaques" />

    <TextView
        android:id="@+id/boa_idade"
        android:layout_width="143dp"
        android:layout_height="25dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/oswald_semibold"
        android:text="Grupo da boa idade"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_judo_page"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judo_page" />

    <TextView
        android:id="@+id/artesanato_page"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/oswald_semibold"
        android:text="Artesanato e Ornamentação"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_judo_page"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boa_idade" />

    <TextView
        android:id="@+id/educação"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:text="Educação"
        android:textColor="#708763"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judo_page" />

    <TextView
        android:id="@+id/educação2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:text="Saúde"
        android:textColor="#708763"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boa_idade" />

    <TextView
        android:id="@+id/educação3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:text="Bem estar"
        android:textColor="#708763"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artesanato_page" /><![CDATA[

