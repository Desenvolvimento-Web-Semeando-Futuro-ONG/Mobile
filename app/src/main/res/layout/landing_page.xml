<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_apresentacao"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="fitXY"
            android:src="@drawable/loginfundo"
            android:tint="#5D2B6395"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/texto_apresentacao"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_marginTop="184dp"
            android:fontFamily="@font/raleway_bold"
            android:text="Junte-se a nós e faça a diferença"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_apresentacao" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#25D366"
            android:contentDescription="Fale conosco no WhatsApp"
            android:src="@drawable/icons8_whatsapp_128"
            app:layout_constraintBottom_toBottomOf="@+id/img_apresentacao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.751"
            app:maxImageSize="42dp"
            app:tint="@android:color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divisória"
        android:layout_width="match_parent"
        android:layout_height="1350dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/divisoria_curva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/nossas_atuacoes"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Nossas Atuações"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divisória" />

    <TextView
        android:id="@+id/acoes_sociais"
        android:layout_width="96dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/oswald_semibold"
        android:text="Ações Sociais"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon_heart_puzzle"
        app:layout_constraintTop_toBottomOf="@+id/nossas_atuacoes" />

    <TextView
        android:id="@+id/atividades"
        android:layout_width="96dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/oswald_semibold"
        android:text="Atividades"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon_heart_puzzle"
        app:layout_constraintTop_toBottomOf="@+id/paragrafo1" />

    <TextView
        android:id="@+id/kimonos"
        android:layout_width="96dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/oswald_semibold"
        android:text="Kimonos"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon_heart_puzzle"
        app:layout_constraintTop_toBottomOf="@+id/paragrafo" />

    <TextView
        android:id="@+id/transportes"
        android:layout_width="96dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/oswald_semibold"
        android:text="Transportes"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon_heart_puzzle"
        app:layout_constraintTop_toBottomOf="@+id/paragrafo2" />

    <ImageView
        android:id="@+id/icon_heart_puzzle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/drawable_circle"
        android:backgroundTint="#9FBD84"
        android:scaleType="centerInside"
        android:src="@drawable/heart_puzzle"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:ignore="UseAppTint" />

    <ImageView
        android:id="@+id/icon_jump"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/drawable_circle"
        android:backgroundTint="#9FBD84"
        android:scaleType="centerInside"
        android:src="@drawable/jump"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_heart_puzzle" />

    <ImageView
        android:id="@+id/icon_kimono"
        android:layout_width="70dp"
        android:layout_height="70dp"
